<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.kkm.market.mapper.ProductMapper">
		
	<select id="getProductInfo"  resultType="com.kkm.market.vo.ProductVO">
		
		select * from m_market where market_idx=#{idx}
	
	
	
	</select>
	
	<select id="getSearchList" resultType="com.kkm.market.vo.ProductVO">
	
	
		select * from m_market where item_title LIKE '%' || #{word} || '%'

	
	</select>
	
	<insert id="setNewItem" parameterType="com.kkm.market.vo.ProductVO">
	
		insert into m_market values(M_MARKET_SEQ.nextval,#{user_idx} ,#{id},#{market_img},#{market_kinds},#{market_price},sysdate,#{item_desc},#{item_title})
	
	</insert>
	

	<delete id="deleteProduct">
		
		delete from m_market where market_idx=#{idx}
	
	</delete>
	
	<update id="modifyProduct" parameterType="com.kkm.market.vo.ProductVO">
		
		update m_market set id=#{id}, market_img=#{market_img}, market_kinds=#{market_kinds} , market_price=#{market_price}, item_desc=#{item_desc}, item_title=#{item_title} where market_idx=#{market_idx}
	
	</update>
	
	

</mapper>